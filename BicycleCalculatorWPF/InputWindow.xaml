<Window x:Class="BicycleCalculatorWPF.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:BicycleCalculatorWPF.Properties"
        Title="Input" Height="Auto" Width="457" WindowStartupLocation="CenterOwner" SizeToContent="Height" Icon="Resources/自行车计算器s.ico" WindowStyle="ToolWindow" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox1" Margin="10" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" Grid.ColumnSpan="3" Padding="3"/>
        <Button Content="{x:Static res:Resources.StringOK}" Grid.Column="1" Margin="10,0,10,10" Grid.Row="2" Click="Button_Click"/>
        <Button Content="{x:Static res:Resources.StringCancel}" Grid.Column="2" Margin="0,0,10,10" Grid.Row="2" Click="Button_Click_1"/>
        <TextBlock x:Name="label1" Margin="10,10,10,0" TextWrapping="Wrap" Text="TextBlock" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
